<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:id="@+id/input_image"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/select_product_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_name"
        android:layout_below="@+id/input_image"
        android:inputType="textMultiLine"
        android:layout_marginTop="20dp"
        android:hint="Product Name"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:padding="20dp"
        android:background="@drawable/input_text_backdrop"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Description"
        android:layout_below="@+id/product_name"
        android:inputType="textMultiLine"
        android:layout_marginTop="15dp"
        android:hint="Description"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:padding="20dp"
        android:background="@drawable/input_text_backdrop"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PriceProduct"
        android:layout_below="@+id/Description"
        android:inputType="textMultiLine"
        android:layout_marginTop="15dp"
        android:hint="Price"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:padding="20dp"
        android:background="@drawable/input_text_backdrop"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/quantity"
        android:layout_below="@id/PriceProduct"
        android:inputType="textMultiLine"
        android:layout_marginTop="15dp"
        android:hint="Quantity"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:padding="20dp"
        android:background="@drawable/input_text_backdrop"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sellerName"
        android:layout_below="@+id/quantity"
        android:inputType="textMultiLine"
        android:layout_marginTop="15dp"
        android:hint="Seller Name"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:padding="20dp"
        android:background="@drawable/input_text_backdrop"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sellerLocation"
        android:layout_below="@+id/sellerName"
        android:inputType="textMultiLine"
        android:layout_marginTop="15dp"
        android:hint="Location"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:padding="20dp"
        android:background="@drawable/input_text_backdrop"

        />

    <Button
        android:id="@+id/add_new_product_btn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sellerLocation"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="45dp"
        android:padding="15dp"
        android:text="Add new product" />
</RelativeLayout>