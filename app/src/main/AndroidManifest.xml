<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.trackyourpackage">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CartActivity"></activity>
        <activity
            android:name=".productsDetailActivity"
            android:label="@string/title_activity_products_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Display"
            android:label="@string/title_activity_display"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddNewProduct"
            android:label="@string/title_activity_add_new_product"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ProductsCategoryRetailer"
            android:label="@string/title_activity_products_category_retailer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterPageRetailer"
            android:label="@string/title_activity_register_page_retailer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".HomePageRetailer" />
        <activity android:name=".HomePageWarehouse" />
        <activity android:name=".HomePage" />
        <activity android:name=".RegisterPage" />
        <activity android:name=".LoginPageWarehouse" />
        <activity android:name=".LoginPageRetailer" />
        <activity android:name=".SelectLoginPage" />
        <activity android:name=".LoginPage" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>